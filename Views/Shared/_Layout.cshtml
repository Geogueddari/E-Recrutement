<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E_Recrutement</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"
    rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/E_Recrutement.styles.css" asp-append-version="true" />
</head>
<body style=" background: linear-gradient(45deg, #ffffff, #fdfdfd, #fcfcfc, #fbfbfb, #fafafa);">
    @if (Context.Request.Path != "/Identity/Account/Register" 
    && Context.Request.Path != "/Identity/Account/Login" 
    && Context.Request.Path != "/Identity/Account/ForgotPassword"
    && Context.Request.Path != "/Identity/Account/ForgotPasswordConfirmation"
    )
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-light border-bottom box-shadow mb-3 fixed-top shadow" style=" background: linear-gradient(45deg, #dfe9f3, #c2d3df, #a6bdcc, #8aa7b8, #6e91a5);">
                <div class="container-fluid">
                    <!-- Logo et nom -->
                    <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/assets/AppLogo.png" alt="AppLogo" style="width: 50px; height: auto;" class="me-1" />
                        <span class="fw-bold text-primary" style="font-size:25px;">E-Recruitment</span>
                    </a>

                    <!-- Bouton toggle pour mobile -->
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <!-- Menu de gauche -->
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Offer" asp-action="Index">Offers</a>
                            </li>
                        </ul>

                        <!-- Barre de recherche -->
                        <form class="d-flex mx-auto" role="search">
                            <input class="form-control me-2 w-90" type="search" placeholder="Search Offer" aria-label="Search">
                            <button class="btn btn-primary " type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </form>

                        <!-- Menu de droite (login/register) -->
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </header>
    }

    @{
        int margin = 75;
        if (Context.Request.Path == "/Identity/Account/Register" 
        || Context.Request.Path == "/Identity/Account/Login" 
        || Context.Request.Path == "/Identity/Account/ForgotPassword"
        || Context.Request.Path == "/Identity/Account/ForgotPasswordConfirmation"
        )
        {
            margin = 0;
        }
    }
    <div class="container" style="margin-top:@($"{margin}px");padding:0;min-width: 100% !important;">
        <!-- ✅ Carrousel -->
        @if (Context.Request.Path == "/")
        {
            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="https://picsum.photos/1200/500?random=1" class="d-block w-100" alt="Random Image 1">
                        <div class="carousel-caption position-absolute start-50 translate-middle-x text-center" style="top: 5%;">
                            <h4>La digitalisation du recrutement s’accélère !</h4>
                            <p>💼 Les entreprises adoptent de plus en plus les plateformes d’e-recrutement pour optimiser leurs processus d’embauche. Découvrez les dernières tendances et innovations..</p>
                            <a href="#" class="btn btn-primary">Discover</a>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="https://picsum.photos/1200/500?random=2" class="d-block w-100" alt="Random Image 2">
                        <div class="carousel-caption position-absolute start-50 translate-middle-x text-center" style="top: 5%;">
                            <h4>L'IA au service du recrutement</h4>
                            <p>🤖 Intelligence artificielle et machine learning révolutionnent la sélection des candidats ! Comment ces technologies améliorent-elles l'efficacité des recruteurs ?.</p>
                            <a href="#" class="btn btn-primary">Discover</a>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="https://picsum.photos/1200/500?random=3" class="d-block w-100" alt="Random Image 3">
                        <div class="carousel-caption position-absolute start-50 translate-middle-x text-center" style="top: 5%;">
                            <h4>Le télétravail change les stratégies de recrutement</h4>
                            <p>🏠 Avec l’essor du travail à distance, les entreprises élargissent leur champ de recherche de talents. Comment s’adaptent-elles à cette nouvelle réalité ?.</p>
                            <a href="#" class="btn btn-primary">Discover</a>
                        </div>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </button>
            </div>


        }
        <main role="main" class="w-100">
            @RenderBody()
        </main>
    </div>

    @if (Context.Request.Path == "/" || Context.Request.Path == "/Home/Privacy")
    {
        <footer class="bg-dark text-white mt-5 p-4 text-center w-100">
            <div class="container">
                <div class="row align-items-start justify-content-between">
                    <!-- Localisation -->
                    <div class="col-md-4">
                        <h5>Our Location</h5>
                        <div class="ratio ratio-16x9">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d26538.195514936528!2d-7.645503268678751!3d33.57311038394645!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xda7cd02e56b6a71%3A0x5b5e4f8f0ed7c6!2sCasablanca%2C%20Morocco!5e0!3m2!1sen!2sfr!4v1700000000000"
                                    width="100%" height="200" style="border:0;" allowfullscreen="" loading="lazy">
                            </iframe>
                        </div>
                    </div>

                    <!-- Contacts -->
                    <div class="col-md-3 text-start">
                        <h5>Contact Us</h5>
                        <p><i class="bi bi-telephone-fill"></i> +212 600 000 000</p>
                        <p><i class="bi bi-envelope-fill"></i> contact@erecruitment.com</p>
                        <p><i class="bi bi-geo-alt-fill"></i> Casablanca, Morocco</p>

                        <!-- Réseaux Sociaux -->
                        <div class="mt-3">
                            <a href="#" class="text-white me-3"><i class="bi bi-facebook fs-4"></i></a>
                            <a href="#" class="text-white me-3"><i class="bi bi-instagram fs-4"></i></a>
                            <a href="#" class="text-white me-3"><i class="bi bi-linkedin fs-4"></i></a>
                            <a href="#" class="text-white"><i class="bi bi-github fs-4"></i></a>
                        </div>
                    </div>

                    <!-- Profils WhatsApp -->
                    <div class="col-md-4">
                        <h5>Contact on WhatsApp</h5>
                        <div class="d-flex justify-content-center gap-4">
                            <a href="https://wa.me/212600000001" target="_blank" class="text-white text-decoration-none">
                                <img src="~/assets/abdeljabar.jpg" class="rounded-circle border border-light" alt="Profile 1" style="width: 100px; height: auto;">
                                <p class="mt-2">Abdeljabbar Elgaddari</p>
                            </a>
                            <a href="https://wa.me/212600000002" target="_blank" class="text-white text-decoration-none">
                                <img src="~/assets/abdeljabar.jpg" class="rounded-circle border border-light" alt="Profile 2" style="width: 100px; height: auto;">
                                <p class="mt-2">Abdellah Chbib</p>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </footer>

    }
    <button class="btn btn-danger fixed-button-right" id="showMessageButton">
        <i class="fas fa-robot"></i>
    </button>
    <button class="btn btn-success fixed-button-left" id="whatsappButton">
        <i class="fab fa-whatsapp"></i> <!-- Icône WhatsApp -->
    </button>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/gh/VincentGarreau/particles.js/particles.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
