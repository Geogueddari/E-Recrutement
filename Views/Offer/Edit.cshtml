@model E_Recrutement.Models.Offer

@{
    ViewData["Title"] = "Edit Offer";
}

<h1>Edit Offer</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="recruiterId" class="form-label"></label>
        <input asp-for="recruiterId" class="form-control" />
        <span asp-validation-for="recruiterId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContractType" class="form-label"></label>
        <input asp-for="ContractType" class="form-control" />
        <span asp-validation-for="ContractType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Sector" class="form-label"></label>
        <input asp-for="Sector" class="form-control" />
        <span asp-validation-for="Sector" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Profile" class="form-label"></label>
        <input asp-for="Profile" class="form-control" />
        <span asp-validation-for="Profile" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Position" class="form-label"></label>
        <input asp-for="Position" class="form-control" />
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Salary" class="form-label"></label>
        <input asp-for="Salary" class="form-control" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Apply</button>
</form>
