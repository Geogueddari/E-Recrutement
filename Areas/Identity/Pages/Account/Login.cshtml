@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<a class="btn btn-light shadow-sm rounded-circle back-to-home" asp-area="" asp-controller="Home" asp-action="Index">
    <i class="fas fa-home"></i>
</a>

<div style="display:flex;justify-content:center; align-items:center;flex-direction:column;">
    <img src="~/assets/AppLogo.png" alt="AppLogo" style="width: 80px; height: auto;" class="me-1" />
    <h1 class="fw-bold text-white" style="font-size:25px;">@ViewData["Title"]</h1>
</div>

<div id="particles-js"></div>

<div class="row login shadow">
    <div class="form">
        <section>
            <form id="account" method="post" style="display:flex;justify-content:center; align-items:center;flex-direction:column;">
                <h1 class="fw-bold text-white mb-3" style="font-size:25px;">Use your account to log in</h1>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3 w-75">
                    <input asp-for="Input.Email" class="form-control input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 w-75">
                    <input asp-for="Input.Password" class="form-control input" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3 w-75 text-white">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <button id="login-submit" type="submit" class="w-75 btn btn-lg btn-success input mb-3">Log in</button>
                 <p class="mb-3 w-75 text-white">
                        <a id="forgot-password" style="color:white;" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p
            </form>
        </section>
    </div>
    <div class="external-login">
        <section >
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">article
                            about setting up this ASP.NET application to support logging in via external services</a>.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-primary w-100 d-flex align-items-center justify-content-center" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                        <i class="fab fa-facebook-f me-2"></i>
                                        Continue with Facebook
                                    </button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
             <p class="text-white"  style="display:flex;justify-content:center; align-items:center;flex-direction:column;">
                        Don't have an account?
                        <a asp-page="./Register" style="color:white;" asp-route-returnUrl="@Model.ReturnUrl">Register</a>
             </p>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
